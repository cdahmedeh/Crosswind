<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <Product>Crosswind</Product>
        <AssemblyName>Crosswind</AssemblyName>
        <Authors>Ahmed El-Hajjar</Authors>
        <Company>Ahmed El-Hajjar</Company>
        
        <Version>0.1</Version>
        <InformationalVersion>$(Version)+$(SourceRevisionId)</InformationalVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="CommandLineParser" Version="2.9.1" />
      <PackageReference Include="FSUIPCClientDLL" Version="3.3.16" />
      <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="9.0.8" />
    </ItemGroup>

</Project>
